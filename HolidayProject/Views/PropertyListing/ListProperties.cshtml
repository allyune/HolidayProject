@model IEnumerable<Domain.Entities.PropertyDetails>
@{
}
@await Component.InvokeAsync("FindProperty")
<h1>All Holiday Properties</h1>

<div class="row" id="cards-container">
    @if(Model.Any())
    {
        @foreach (var property in @Model)
        {
            <div class="col-md-4">
            @await Html.PartialAsync("_PropertyCardPartial", property)
            </div>
        }   
    }
    else
    {
        <div class="col">
            <p>No properties are available at the moment.</p>
        </div>
    }

    </div>