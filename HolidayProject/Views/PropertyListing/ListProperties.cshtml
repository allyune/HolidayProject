@model IEnumerable<Domain.Entities.PropertyDetails>
@{
}

<h1>All Holiday Properties</h1>
@if(Model.Any())
{
    @foreach (var property in @Model)
    {
        <h4>ID: @property.Id, @property.Name</h4>
        <p>@property.Blurb</p>
        <p>Location: @property.Location</p>
        <p>Number of bedrooms: @property.NumberOfBedrooms</p>
        <p>PricePerNight: @property.CostPerNight</p>
        <a asp-controller="PropertyListing" asp-action="ViewPropertyDetails" asp-route-id=@property.Id>See details -></a>

    }   
}
else
{
<p>No properties are available at the moment.</p>
}

